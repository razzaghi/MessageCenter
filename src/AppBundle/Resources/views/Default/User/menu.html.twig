<div class="box userMenu">
    
    <div class="picture">
        
        <img class="image" alt="" title="" src="{{ url('freepost_user_picture', {'userHashId': user.hashId}) }}" />
        
        <div class="content">
            <div class="username">
                {{ user.username }}
            </div>
            
            {# Show the message "You have X new replies" here #}
            <a class="none newReplies" target="_self" href="{{ path('freepost_user_replies', {'userName': user.username}) }}"></a>
        </div>
    </div>
    
    <div class="menu">
        <a class="none communities {{ page == 'COMMUNITIES' ? 'selected' }}" target="_self" href="{{ path('freepost_user', {'userName': user.username}) }}">
            مباحث
        </a>
        <a class="none my {{ (page == 'MYPOSTS' or page == 'MYCOMMENTS' or page == 'REPLIES') ? 'selected' }}" target="_self" href="{{ path('freepost_user_replies', {'userName': user.username}) }}">
            نوشته های من / نظرات
        </a>
        <a class="none preferences {{ page == 'PREFERENCES' ? 'selected' }}" target="_self" href="{{ path('freepost_user_preferences', {'userName': user.username}) }}">
            تنظیمات
        </a>
        <a class="none signout {{ page == 'SIGNOUT' ? 'selected' }}" target="_self" href="{{ path('freepost_user_signout') }}">
            خروج
        </a>
    </div>
    
</div>