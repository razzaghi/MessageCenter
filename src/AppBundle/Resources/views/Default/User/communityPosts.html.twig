<div class="header">
    <img alt="" title="" src="{{ url('freepost_community_picture', {'communityHashId': community.hashId}) }}" />
    
    <span class="communityName">{{ community.name }}</span>
    <br />
    <ul class="menu">
        <li>
            <a class="posts" target="_self" href="{{ url('freepost_community', {'communityName': community.name}) }}">نوشته ها</a>
