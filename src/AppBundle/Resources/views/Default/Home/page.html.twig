{% extends 'AppBundle:Default:index.html.twig' %}

{% block title %}سیستم اطلاع رسانی جام{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    
    {% stylesheets
        '@AppBundle/Resources/public/css/home.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
        
{% endblock %}

{% block javascript %}
    {{ parent() }}
    
    {% javascripts
        '@AppBundle/Resources/public/js/home.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
    
{% block body %}
    <div class="home">
        
        <div class="header">

            
            <a class="none" target="_self" href="{{ url('freepost_homepage') }}">
                {% image '@AppBundle/Resources/public/images/logo.png' %}
                    <img src="{{ asset_url }}" width="200" height="50" alt="" />
                {% endimage %}


                <div class="title">
                    سیستم اطلاع رسانی جام
                </div>
            </a>

            {% if not app.user %}
                <a class="none signin left" target="_self" href="{{ url('freepost_user_signin') }}">
                    ورود
                </a>
            {% endif %}

        </div>
        
        {% block content %}{% endblock %}
        
    </div>

{% endblock %}




